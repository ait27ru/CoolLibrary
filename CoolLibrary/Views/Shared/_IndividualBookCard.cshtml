@model CoolLibrary.Models.Book

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Genre.Name.Replace(' ','_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-12"><label class="float-left"><span class="text-info h5">@Model.Title (@Model.PublishedYear)</span></label> </div>
        </div>
        <div class="card-body p-1 px-3 row">
            <div class="col-12 pt-2">
                <p> <b>@Model.Author</b></p>
            </div>
            <div class="col-7 pt-2">
                <p> @Model.Genre.Name</p>
            </div>
            <div class="col-5 pt-2">
                <span class="badge p-2 border float-right"> Left: @Model.Quantity</span>
            </div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>
</div>
